 python/src/ir.cc | 1 -
 1 file changed, 1 deletion(-)

diff --git a/python/src/ir.cc b/python/src/ir.cc
index 1cf02f6ae..cbeefc5ce 100644
--- a/python/src/ir.cc
+++ b/python/src/ir.cc
@@ -1947,7 +1947,6 @@ void init_triton_ir(py::module &&m) {
                   parseCommaSeparatedValues(debugOnly, storage);
               ::llvm::DebugFlag = true;
               using namespace llvm;
-              setCurrentDebugTypes(debugTypes.data(), debugTypes.size());
             }
 
             bool haveTiming = ::triton::tools::getBoolEnv("MLIR_ENABLE_TIMING");
